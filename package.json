{
  "name": "ksz-reader-app",
  "version": "1.6.4",
  "description": "KSZ Reader - 獨立閱讀器",
  "author": "KSZ Studio",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "KSZ Reader",
    "appId": "com.ksz.reader",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "category": "public.app-category.education"
    },
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "william5555",
        "repo": "ksz-reader"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
