{
  "name": "ksz-reader-app",
  "version": "1.6.0",
  "description": "KSZ Reader - 封裝筆記閱讀器 for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "KSZ Reader",
    "appId": "com.ksz.reader",
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.education"
    },
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "william5555",
        "repo": "ksz-reader"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}

